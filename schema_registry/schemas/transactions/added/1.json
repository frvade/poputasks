{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "title": "Transactions.Added.v1",
  "description": "json schema for BE task events (version 1)",

  "definitions": {
    "event_data": {
      "type": "object",
      "properties": {
        "public_id": {
          "type": "string"
        },
        "amount": {
          "type": "number"
        },
        "type": {
          "type": "string"
        },
        "source": {
          "$ref": "#/definitions/source"
        },
        "user": {
          "$ref": "#/definitions/user"
        }
      },
      "required": [
        "public_id",
        "amount",
        "type",
        "source",
        "user"
      ]
    },
    "user": {
      "type": "object",
      "properties": {
        "public_id": {
          "type": "string"
        }
      },
      "required": [
        "public_id"
      ]
    },
    "source": {
      "type": "object",
      "properties": {
        "public_id": {
          "type": "string"
        },
        "type": {
          "type": "string"
        }
      },
      "required": [
        "public_id",
        "type"
      ]
    }
  },

  "type": "object",

  "properties": {
    "event_id":      { "type": "string" },
    "event_version": { "enum": [1] },
    "event_name":    { "enum": ["TransactionAdded"] },
    "event_time":    { "type": "string" },
    "producer":      { "type": "string" },

    "data": { "$ref": "#/definitions/event_data" }
  },

  "required": [
    "event_id",
    "event_version",
    "event_name",
    "event_time",
    "producer",
    "data"
  ]
}
